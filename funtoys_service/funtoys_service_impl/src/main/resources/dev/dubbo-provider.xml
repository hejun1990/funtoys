<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="funtoys_service_provider"/>

    <dubbo:registry protocol="zookeeper" address="localhost:2181" client="zkclient"/>

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.funtoys.service.inter.AccountInfoService" ref="accountInfoService" retries="0" timeout="10000"/>
    <dubbo:service interface="com.funtoys.service.inter.BrandService" ref="brandService" retries="0" timeout="10000"/>

    <!-- 和本地bean一样实现服务 -->
    <bean id="accountInfoService" class="com.funtoys.service.impl.AccountInfoServiceImpl" />
    <bean id="brandService" class="com.funtoys.service.impl.BrandServiceImpl" />
</beans>